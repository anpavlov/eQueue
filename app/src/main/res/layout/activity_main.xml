<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <com.sudo.equeue.utils.MultiSwipeRefreshLayout
        android:id="@+id/refresh_queue_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/queue_list_view">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:isScrollContainer="false"
                    android:id="@+id/rv"/>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:id="@+id/no_queues_view">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/blankText"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:id="@+id/queueImg"
                        android:layout_centerVertical="false"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/people_pur"
                        android:maxHeight="64dp"
                        android:maxWidth="64dp"
                        android:layout_marginTop="-100dp"
                        android:layout_below="@id/blankText"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="У вас нет ни одной очереди"
                        android:textColor="@color/mainColor"
                        android:id="@+id/noQueues"
                        android:layout_below="@id/queueImg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Добавить"
                        android:id="@+id/btn_add_queue"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:shadowRadius="0"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_custom"/>

                </RelativeLayout>
            </ScrollView>

            <!--<fragment android:name="com.example.alex.inqueue.NoQueueFragment"-->
            <!--android:id="@+id/no_queue_frag"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--tools:layout="@layout/fragment_no_queues" />-->
            <!--<fragment android:name="com.example.alex.inqueue.QueueListFragment"-->
                <!--android:id="@+id/list_queue"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--tools:layout="@layout/fragment_queue_list"-->
                <!--android:layout_marginTop="56dp"/>-->
        </RelativeLayout>

    </com.sudo.equeue.utils.MultiSwipeRefreshLayout>

    <!--<include layout="@layout/overlay"/>-->

</LinearLayout>