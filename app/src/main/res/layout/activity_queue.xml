<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.sudo.equeue.utils.StaticSwipeRefreshLayout
        android:id="@+id/refresh_queue_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Global content layout -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Queue stats layout -->
            <RelativeLayout
                android:id="@+id/queue_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_centerHorizontal="true">

                <!-- Num in queue stat -->
                <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/stats_background_circle"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:id="@+id/stats_in_queue"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="40sp"
                            android:visibility="visible"/>

                        <ProgressBar
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/stats_in_queue_loader"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:indeterminate="false" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="@drawable/stats_background_label"
                        android:text="в очереди"
                        android:textColor="@android:color/white"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:textSize="11dp" />

                </RelativeLayout>

                <!-- Before stat -->
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/stats_background_circle_filled"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/white"
                            android:id="@+id/stats_before"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="40sp"
                            android:visibility="visible"
                            android:text="6" />

                        <ProgressBar
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/stats_before_loader"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:theme="@style/WhiteProgress"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="перед\nвами"
                        android:textColor="@android:color/white"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="6dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="11dp" />

                </RelativeLayout>

                <!-- Time left stat -->
                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:background="@drawable/stats_background_circle_filled"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="12"
                            android:textColor="@android:color/white"
                            android:id="@+id/stats_time_left"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="40sp"
                            android:visibility="visible"/>

                        <ProgressBar
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/stats_time_loader"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:theme="@style/WhiteProgress"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="минут"
                        android:textColor="@android:color/white"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="14dp"
                        android:textSize="11dp" />

                </RelativeLayout>

            </RelativeLayout>

            <!--<com.google.android.gms.maps.MapView-->
                <!--android:id="@+id/lite_map"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="170dp"-->
                <!--android:layout_below="@id/queue_stats"-->
                <!--map:liteMode="true"-->
                <!--map:mapType="none" />-->


            <!-- Ticket -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/queue_stats"
                android:layout_above="@+id/btn_join_queue">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:minHeight="324dp"
                    android:id="@+id/ticket"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="324dp"
                        android:src="@drawable/ticket"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY" />
                    <TextView
                        android:id="@+id/ticket_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17"
                        android:textColor="@color/mainColor"
                        android:layout_marginTop="80dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="25pt" />
                    <TextView
                        android:id="@+id/ticket_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:text="2016 03/02 12:34"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/ticket_num"/>
                </RelativeLayout>
            </RelativeLayout>

            <!-- Buttons -->
            <Button
                android:id="@+id/btn_join_queue"
                android:layout_alignParentBottom="true"
                android:text="Открыть"
                style="@style/FlatButton" />

            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/button_loader"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="17dp"
                android:layout_centerHorizontal="true"
                android:theme="@style/WhiteProgress"/>

        </RelativeLayout>
        </ScrollView>

    </com.sudo.equeue.utils.StaticSwipeRefreshLayout>

</LinearLayout>
