                    android:background="@drawable/stats_background_circle"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:id="@+id/stats_in_queue"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="40sp" />


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="@drawable/stats_background_label"
                        android:text="в очереди"
                        android:textColor="@android:color/white"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:textSize="11dp" />

                </RelativeLayout>

                <!-- Before stat -->
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/stats_background_circle"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/stats_before"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="40sp" />


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:background="@drawable/stats_background_label"
                        android:text="перед вами"
                        android:textColor="@android:color/white"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:textSize="11dp" />

                    <!--<TextView-->
