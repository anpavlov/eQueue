            <!-- Ticket -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/queue_stats"
                android:layout_above="@+id/btn_join_queue">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:minHeight="324dp"
                    android:id="@+id/ticket"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="230dp"
                        android:layout_height="324dp"
                        android:src="@drawable/ticket2"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY" />
                    <TextView
                        android:id="@+id/ticket_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17"
                        android:textColor="@color/mainColor"
                        android:layout_marginTop="62dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="25pt" />
                </RelativeLayout>
            </RelativeLayout>

            <!-- Buttons -->
            <Button
                android:id="@+id/btn_join_queue"
                android:layout_alignParentBottom="true"
                android:text="Присоединиться"
                style="@style/FlatButton" />

            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/button_loader"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="17dp"
                android:layout_centerHorizontal="true"
                android:theme="@style/WhiteProgress"
                android:visibility="gone" />

        </RelativeLayout>
