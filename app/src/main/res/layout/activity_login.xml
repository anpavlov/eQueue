<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sudo.equeue.activities.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/field_email"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/field_password"
        android:hint="Пароль"
        android:layout_below="@+id/field_email"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Войти"
        android:id="@+id/btn_login_email"
        android:layout_below="@+id/field_password"
        android:layout_alignLeft="@+id/field_password"
        android:layout_alignStart="@+id/field_password"
        android:layout_alignRight="@+id/field_password"
        android:layout_alignEnd="@+id/field_password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Войти через Вконтакте"
        android:id="@+id/btn_login_vk"
        android:layout_below="@+id/btn_login_email"
        android:layout_alignLeft="@+id/field_password"
        android:layout_alignStart="@+id/field_password"
        android:layout_alignRight="@+id/field_password"
        android:layout_alignEnd="@+id/field_password" />

</RelativeLayout>
